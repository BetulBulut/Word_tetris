<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".game_area">


    <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/gridbackground"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="10dp"
            android:columnCount="8"
            android:rowCount="10"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="232dp">






    </GridLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cevap_text"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="100dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark" android:textSize="20sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skor"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="100dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark" android:textSize="20sp"/>
    <ImageButton
            android:layout_width="64dp"
            android:layout_height="54dp" app:srcCompat="@drawable/tik2" android:id="@+id/check_button"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"/>
    <ImageButton
            android:layout_width="58dp"
            android:layout_height="54dp" app:srcCompat="@drawable/x2" android:id="@+id/cancel_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"/>


</RelativeLayout>